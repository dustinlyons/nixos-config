#!/bin/sh -e

VERSION=1.0

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

ARCH=$(uname -m)

case "$ARCH" in
  x86_64)
    FLAKE_TARGET="x86_64-linux"
    ;;
  aarch64)
    FLAKE_TARGET="aarch64-linux"
    ;;
  *)
    echo -e "${RED}Unsupported architecture: $ARCH${CLEAR}"
    exit 1
    ;;
esac

sudo echo
echo -e "${GREEN}Starting...${CLEAR}"

sudo SSH_AUTH_SOCK=$SSH_AUTH_SOCK /run/current-system/sw/bin/nixos-rebuild switch --flake .#nixosConfigurations.$FLAKE_TARGET.config.system.build.toplevel $@

echo -e "${GREEN}Done${CLEAR}"
